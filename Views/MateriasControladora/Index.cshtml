<div class="container mt-5">
    <h1 class="mb-4">Materias</h1>
    <div class="d-flex justify-content-start mb-3">
        <a href="/MateriasControladora/Nueva" class="btn btn-primary">Nueva Materia</a>
    </div>

    @foreach (Carrera carrera in ViewBag.Carreras)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h2 class="mb-0">Carrera: @carrera.Nombre</h2>
            </div>
            @foreach (Semestre semestre in carrera.Semestres)
            {
                <div class="card-body pt-0">
                    <h3 class="mt-3">Semestre: @semestre.Nombre</h3>
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Materia materia in semestre.Materias)
                            {
                                <tr>
                                    <td>@materia.Nombre</td>
                                    <td>@materia.Descripcion</td>
                                    <td>
                                        <a href="/MateriasControladora/Detalle/@materia.Id" class="btn btn-info btn-sm me-2">Detalle</a>
                                        <a href="/MateriasControladora/Editando/@materia.Id" class="btn btn-warning btn-sm me-2">Editar</a>
                                        <a href="/MateriasControladora/Borrar/@materia.Id" class="btn btn-danger btn-sm">Borrar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    }
</div>
