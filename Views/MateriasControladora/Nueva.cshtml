
<div class="container mt-5">
    <h1 class="mb-4">Crear Materia</h1>
    <p class="text-danger">@ViewBag.Error</p>

    <!-- Formulario para crear una nueva materia -->
    <form action="/MateriasControladora/Crear" method="post" class="mt-4">
        <div class="form-group mb-3">
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" value="@ViewBag.Nombre" class="form-control">
        </div>

        <div class="form-group mb-3">
            <label for="descripcion">Descripcion</label>
            <input type="text" id="descripcion" name="descripcion" value="@ViewBag.Descripcion" class="form-control">
        </div>

        <div class="form-group mb-3">
            <label for="semestreId">Semestre</label>
            <select id="semestreId" name="semestreId" class="form-control">
                <option>Selecciona una opción</option>
                @foreach (Semestre semestre in ViewBag.Semestres)
                {
                    <option value="@semestre.Id">@semestre.Nombre</option>
                }
            </select>
        </div>

        <!-- Botones de acción -->
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a href="/MateriasControladora/Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
