<h1>Crear Nueva Carrera</h1>

<!-- Mostrar errores, si los hay -->
<p class="text-danger">@ViewBag.Error</p>

<!-- Formulario para crear nueva carrera -->
<form action="/CarrerasControladora/Crear" method="post" class="mt-3">
    <div class="form-group mb-3">
        <label for="nombre">Nombre</label>
        <input type="text" id="nombre" name="nombre" value="@ViewBag.Nombre" class="form-control" placeholder="Ingrese el nombre de la carrera">
    </div>
    <div class="form-group mb-3">
        <label for="descripcion">Descripción</label>
        <textarea id="descripcion" name="descripcion" class="form-control" placeholder="Describa la carrera" rows="3">@ViewBag.Descripcion</textarea>
    </div>
    <div class="form-group mb-3">
        <label for="requerimientos">Requerimientos</label>
        <textarea id="requerimientos" name="requerimientos" class="form-control" placeholder="Ingrese los requerimientos necesarios" rows="3">@ViewBag.Requerimientos</textarea>
    </div>

    <!-- Botones para acciones -->
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/CarrerasControladora/Index" class="btn btn-secondary">Cancelar</a>
</form>
