@{
}

<div class="container mt-5">
    <h1 class="mb-4">Carreras</h1>
    <div class="d-flex justify-content-start mb-3">
        <a href="/CarrerasControladora/Nueva" class="btn btn-primary">Nueva Carrera</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Carrera carrera in ViewBag.Carreras)
            {
                <tr>
                    <td>@carrera.Nombre</td>
                    <td>
                        <a href="/CarrerasControladora/Detalle/@carrera.Id" class="btn btn-info btn-sm me-2">Detalle</a>
                        <a href="/CarrerasControladora/Editando/@carrera.Id" class="btn btn-warning btn-sm me-2">Editar</a>
                        <a href="/CarrerasControladora/Borrar/@carrera.Id" class="btn btn-danger btn-sm">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
